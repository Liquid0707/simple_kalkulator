<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/two">

    <View
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="@drawable/main"
        android:layout_alignParentBottom="true"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="110dp"
        app:cardBackgroundColor="@color/two"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/one"
        app:strokeWidth="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="OPERASI"
        android:textColorHint="@color/three"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="right"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HASIL"
        android:textColorHint="@color/three"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="300dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="right"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp">
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="0"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            android:layout_marginTop="234dp"
            app:cornerRadius="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="1"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginTop="175.5dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="4"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginTop="117dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="7"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginTop="58.5dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="C"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="."
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="234dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="2"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="175.5dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="5"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="117dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="8"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="58.5dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="+/-"

            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="16dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="80dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="="
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="234dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="3"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="175.5dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="6"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="117dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="9"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="58.5dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="%"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="160dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="+"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="234dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="-"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="175.5dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="*"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="117dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="/"
            android:textColor="@color/two"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="58.5dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="DEL"
            android:textColor="@color/one"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/three"
            app:cornerRadius="8dp"
            android:layout_marginLeft="250dp"/>
    </FrameLayout>
</RelativeLayout>